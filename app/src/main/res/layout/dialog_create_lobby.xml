<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_max_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maximum players:"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/max_players_picker"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <NumberPicker
        android:id="@+id/max_players_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/text_max_players"
        app:layout_constraintBottom_toBottomOf="@id/text_max_players"
        app:layout_constraintLeft_toRightOf="@id/text_max_players"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>